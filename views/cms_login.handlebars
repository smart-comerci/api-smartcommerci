    function validacaoEmail2(field) {

        usuario = field.val().substring(0, field.val().indexOf("@"));
        dominio = field.val().substring(field.val().indexOf("@") + 1, field.val().length);


        if ((usuario.length >= 1) &&
            (dominio.length >= 3) &&
            (usuario.search("@") == -1) &&
            (dominio.search("@") == -1) &&
            (usuario.search(" ") == -1) &&
            (dominio.search(" ") == -1) &&
            (dominio.search(".") != -1) &&
            (dominio.indexOf(".") >= 1) &&
            (dominio.lastIndexOf(".") < dominio.length - 1)) {

            if (validaSenha($("#senhaMasterLogin"))) {
                field.css("border", "1px solid green");
                $(".btnStart").css("opacity", "0.2")
            }


