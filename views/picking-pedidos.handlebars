<script>
    if(localStorage.token == undefined || localStorage.token == null || localStorage.token == ''){
        location.replace("/picking-login")
    }

    setTimeout(()=>{
        $(".menuActive").click()
    }, 2000)
    $(".tituloPedidos").click(function() {
       $(".buscaPedidoOculto").fadeOut()
        $(".btnSearch").show()
    })

    $(".inputBuscaModal").change(function() {
       $(".buscaPedidoOculto").fadeOut()
        $(".btnSearch").show()
    })
    $(".inputBuscaModal").keyup(function(){
        var valor = $(this).val()
        $(".cardPedido").each(function(){
            if($(this).text().indexOf(valor) > -1){
                $(this).show()
            }else{
                $(this).hide()
            }
        })
    })

</script>





